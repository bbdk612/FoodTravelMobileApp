<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
  <StackLayout>
    <GridLayout rows="*, *, *, *">
      <TextField row="0">
        <FormattedString>
          <Span text=" {{ food.title }} " />
        </FormattedString>
      </TextField>
      <TextView row="1">
        <FormattedString>
          <Span text=" {{ food.description }} " />
        </FormattedString>
      </TextView>
      <TextField row="2">
        <FormattedString>
          <Span text=" {{ food.price }} " />
        </FormattedString>
      </TextField>

      <Button text="Сохранить" />
    </GridLayout>
  </StackLayout>
</Page>
