<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="FoodTravel" />

    <GridLayout rows="*, *, *, *" height="250">
        <TextField row="0" keyboardType="email" id="email" hint="Почта"
            textChange="{{ onEmailTextChange }}" />
        <TextField row="1" secure="true" id="pass" hint="Пароль" textChange="{{ onPassTextChange }}" />
        <Button row="2" text="Войти" class="login-primary" tap="{{ onLoginButtonTap }}" />
        <Button row="3" text="Регистрация" class="login-secondary"
            tap="{{ onRegistrationButtonTap }}" />
    </GridLayout>
</Page>
