<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
  <ActionBar title="FoodTravel" />

  <GridLayout rows="*, *, *, *, *, *, *, *" height="250">
    <TextField row="0" keyboardType="email" hint="Почта" />
    <TextField row="1" keyboardType="phone" hint="Номер телефона" />

    <TextField row="2" hint="Фамилия" />
    <TextField row="3" hint="Имя" />
    <TextField row="4" secure="true" hint="Пароль" />
    <TextField row="5" secure="true" hint="Подтвердите ароль" />
    <Button row="6" text="Регистрация" class="login-primary" tap="{{ onRegistrationButtonTap }}" />
    <Button row="7" text="Войти" class="login-secondary"
      tap="{{ onLoginButtonTap }}" />
  </GridLayout>
</Page>
